    <form class="loginAndRegister" action="/register" method="post">
        <div class="form-group">
            <label class="form-group__label" for="name">Имя пользователя</label>
            <input class="form-group__input" type="text" id="name" name="name" placeholder="Имя пользователя">
        </div>
    
        <div class="form-group">
            <label class="form-group__label" for="password">Пароль</label>
            <input class="form-group__input" type="password" id="password" name="password" placeholder="Пароль">
        </div>
    
        <input class="form-button" type="submit" value="Зарегистрироваться">
    </form>
